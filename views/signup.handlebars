<!-- BODY - REGISTRATION     -->
    <div class="col-sm-8 text-center runMate">
      <h1>Running Mate</h1>
      <h3>Tagline goes here</h3>
      <form action="/signup" method="POST">
        <div class="form-group text-left">
          <label for="inputFirstName">First Name</label>
          <input type="text" class="form-control" name="firstName" id="inputFirstName" placeholder="Amanda">
        </div>
        <div class="form-group text-left">
          <label for="inputLastName">Last Name</label>
          <input type="text" class="form-control" name="lastName" id="inputLastName" placeholder="Awesome">
        </div>
        <div class="form-group text-left">
          <label for="inputEmail">Email address</label>
          <input type="email" class="form-control" name="email" id="inputEmail" placeholder="Email">
        </div>
        <div class="form-group text-left">
          <label for="inputZip">Zip Code</label>
          <input type="text" class="form-control" name="zipCode" id="inputZip" placeholder="5-digit example 22204">
        </div>
        <div class="form-group text-left">
          <label for="inputPassword">Password</label>
          <input type="password" class="form-control" name="password" id="inputPassword" placeholder="Password">
        </div>

        <div class="checkbox">
          <label>
            <input type="checkbox"> <strong>I agree </strong>to Terms & Conditions
          </label>
        </div>
        <button type="submit" class="btn btn-default">Register</button>
      </form>

    
